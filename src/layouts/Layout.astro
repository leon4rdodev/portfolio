---
import "../styles/global.css";
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import type { Lang } from "../i18n/ui";
import Lightbox from "../components/Lightbox.astro";

interface Props {
  title: string;
  description: string;
  lang: Lang;
  ogImage?: string;
}

const { title, description, lang, ogImage = "/og-image.png" } = Astro.props;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const alternateLang = lang === "es" ? "en" : "es";
const alternateUrl = new URL(
  Astro.url.pathname.replace(`/${lang}`, `/${alternateLang}`),
  Astro.site,
);
const ogImageUrl = new URL(ogImage, Astro.site);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- SEO -->
    <link rel="canonical" href={canonicalUrl.href} />
    <link rel="alternate" hreflang={alternateLang} href={alternateUrl.href} />
    <link rel="alternate" hreflang={lang} href={canonicalUrl.href} />

    <!-- OG -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:locale" content={lang === "es" ? "es_ES" : "en_US"} />
    <meta property="og:image" content={ogImageUrl.href} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <!-- Scroll Animations â€” re-runs after each client-side navigation -->
    <script>
      document.addEventListener("astro:page-load", () => {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add("is-visible");
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.1, rootMargin: "0px 0px -40px 0px" },
        );

        document.querySelectorAll(".animate-on-scroll").forEach((el) => {
          observer.observe(el);
        });
      });
    </script>
    <Lightbox />

    <!-- Custom Scrollbar -->
    <div id="custom-scrollbar">
      <div id="custom-scrollbar-thumb"></div>
    </div>

    <style>
      #custom-scrollbar {
        position: fixed;
        top: 0;
        right: 0;
        width: 3px;
        height: 100%;
        z-index: 9999;
        pointer-events: none;
        /* hide on real touch devices */
      }

      @media (hover: none) and (pointer: coarse) {
        #custom-scrollbar {
          display: none;
        }
      }

      #custom-scrollbar-thumb {
        position: absolute;
        right: 0;
        width: 3px;
        border-radius: 2px;
        background: linear-gradient(
          to bottom,
          rgba(96, 165, 250, 0.9),
          rgba(59, 130, 246, 0.6)
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        will-change: transform, height;
      }

      #custom-scrollbar-thumb.is-visible {
        opacity: 1;
      }
    </style>

    <script>
      document.addEventListener("astro:page-load", () => {
        const thumb = document.getElementById("custom-scrollbar-thumb");
        if (!thumb) return;
        const el = thumb as HTMLElement;

        let hideTimer: ReturnType<typeof setTimeout> | null = null;

        function updateThumb() {
          const scrollTop = window.scrollY;
          const docHeight =
            document.documentElement.scrollHeight - window.innerHeight;
          if (docHeight <= 0) return;

          const progress = scrollTop / docHeight;
          const viewportH = window.innerHeight;
          // thumb height: min 40px, max proportional
          const thumbH = Math.max(
            40,
            (viewportH / document.documentElement.scrollHeight) * viewportH,
          );
          const maxTop = viewportH - thumbH;
          const top = progress * maxTop;

          el.style.height = `${thumbH}px`;
          el.style.transform = `translateY(${top}px)`;
          el.classList.add("is-visible");

          if (hideTimer) clearTimeout(hideTimer);
          hideTimer = setTimeout(() => {
            el.classList.remove("is-visible");
          }, 1200);
        }

        window.addEventListener("scroll", updateThumb, { passive: true });
        // init on load
        updateThumb();
      });
    </script>
  </body>
</html>
